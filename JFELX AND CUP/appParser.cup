expr ::=    expr SUMA term      {:
                                        exprecion = exprecion + termino;
                                        //System.out.println("El resultado de la suma es: "+exprecion);
                                        termino=0;
                                :}
        |   expr RESTA term     {:
                                        exprecion = exprecion + termino;
